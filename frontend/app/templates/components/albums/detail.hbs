<div class="breadcrumb">
    <ul class="breadcrumb_list">
        <li class="breadcrumb_list__item"><LinkTo @route={{'music'}} class="breadcrumb_list__item-link">{{t "breadcrumb.home"}}</LinkTo></li>
        <li class="breadcrumb_list__item">|</li>
        <li class="breadcrumb_list__item"><LinkTo @route={{'music.albums'}} class="breadcrumb_list__item-link">{{t "breadcrumb.albums"}}</LinkTo></li>
    </ul>
</div>

<div class="album-details_header">
    <div class="album-details_header__imgbox">
        <picture>
            <source media="(max-width: 700px)" srcset={{album.imgSmallPath}}>
            <source media="(min-width: 701px)" srcset={{album.imgMediumPath}}>
            <source media="(min-width: 1200px)" srcset={{album.imgPath}}>
            
            <img src={{album.imgPath}} alt={{album.title}}  class="album-details_header__img">
        </picture>
    </div>

    <div class="album-details_header__title">
        <h2>{{album.title}}</h2>
        {{#if album.songs}}
            <button class="album-details_header__play-btn">{{t "albumsDetail.playAll"}}</button>
        {{/if}}
        
    </div>
</div>

<SongsList @record={{album}} />
